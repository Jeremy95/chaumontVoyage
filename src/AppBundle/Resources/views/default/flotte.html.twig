        $(function () {
            $('#myModal').on('shown.bs.modal', function () {
                if ($('.cpt').hasClass('hide')) {
                    $('.cpt').removeClass('hide');
                }
            });

            $('#myModal').on('hide.bs.modal', function () {
                if ($('.cpt').hasClass('hide') === false) {
