                <div class="flexslider">
                    <div class="slider-wrap">
                        <div class="slide" data-thumb="{{ asset('images/slider/boxed/thumbs/2.jpg') }}">
                            <a href="#">
                                <img src="{{ asset('images/slider/boxed/2.jpg') }}" alt="Slide 2">
                                <div class="flex-caption slider-caption-bg">Responsive Ready Design</div>
                            </a>
                        </div>
                        <div class="slide" data-thumb="{{ asset('images/slider/boxed/thumbs/3.jpg') }}">
                            <a href="#">
